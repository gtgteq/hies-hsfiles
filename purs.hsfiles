library:
  source-dirs: src

executables:
  server:
    main:                Main.hs
    source-dirs:         app
    ghc-options:
    - -threaded
    - -rtsopts
    - -with-rtsopts=-N
    dependencies:
    - {{name}}

  gen-purs:
    main:                GeneratePureScript.hs
    source-dirs:         gen
    dependencies:
    - {{name}}
    - lens
    - purescript-bridge
    - servant-purescript

